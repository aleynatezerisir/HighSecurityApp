    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Frame Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="AntiqueWhite" Padding="0" CornerRadius="15">
                <Label Text="Please create your password by clicking on the buttons given below." FontSize="16" FontAttributes="Bold" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            </Frame>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="PaleVioletRed" Padding="0" Margin="10" CornerRadius="30">
                <Button Text="Clear" FontSize="16" BackgroundColor="Transparent" FontAttributes="Bold" TextColor="Black" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Clicked="Clicked_Clear"/>
            </Frame>
            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="LightGreen" Padding="0" Margin="10" CornerRadius="30">
                <Button Text="Save" FontSize="16" BackgroundColor="Transparent" FontAttributes="Bold" TextColor="Black" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Clicked="Clicked_Save"/>
            </Frame>
        </Grid>


        <Grid Grid.Row="1" Grid.Column="0" Padding="15,0,15,0">
